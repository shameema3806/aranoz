<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">  
  <link href="/assets/css/style.css" rel="stylesheet" />
</head>

<body class="bg-gray-100 text-gray-800">
  <!-- Include header -->
  <%- include('../partials/admin/header') %>

  <!-- Dashboard Content -->
<main class="dashboard-main pt-16 pl-64 xl:pl-64 lg:pl-64 md:pl-0 sm:pl-0 p-6 transition-all duration-300 h-[calc(100vh-4rem)] overflow-y-auto">
  <div class="container mx-auto space-y-6">

      <!-- Top Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-4 gap-6">

  <!-- Total Users -->
  <div class="bg-white shadow-md rounded-xl p-5 flex items-center justify-between">
    <div>
      <p class="text-sm text-gray-500">Total Users</p>
      <h2 class="text-2xl font-semibold mt-1">2,342</h2>
    </div>
    <i class="fa-solid fa-user-group text-blue-600 text-3xl"></i>
  </div>

  <!-- Total Orders -->
  <div class="bg-white shadow-md rounded-xl p-5 flex items-center justify-between">
    <div>
      <p class="text-sm text-gray-500">Total Orders</p>
      <h2 class="text-2xl font-semibold mt-1">1,289</h2>
    </div>
    <i class="fa-solid fa-basket-shopping text-green-600 text-3xl"></i>
  </div>

  <!-- Products -->
  <div class="bg-white shadow-md rounded-xl p-5 flex items-center justify-between">
    <div>
      <p class="text-sm text-gray-500">Products</p>
      <h2 class="text-2xl font-semibold mt-1">842</h2>
    </div>
    <i class="fa-solid fa-boxes-stacked text-purple-600 text-3xl"></i>
  </div>

  <!-- Revenue -->
  <div class="bg-white shadow-md rounded-xl p-5 flex items-center justify-between">
    <div>
      <p class="text-sm text-gray-500">Revenue</p>
      <h2 class="text-2xl font-semibold mt-1">$12.4K</h2>
    </div>
    <i class="fa-solid fa-sack-dollar text-yellow-500 text-3xl"></i>
  </div>

</div>

      <!-- Graphs Section -->
    <div class="grid grid-cols-1 xl:grid-cols-2 gap-6">
        <!-- Sales Chart -->
        <div class="bg-white rounded-xl shadow-md p-5">
          <div class="flex justify-between items-center mb-3">
            <h3 class="font-semibold text-lg text-gray-700">Monthly Sales</h3>
            <i class="fas fa-chart-line text-blue-600 text-xl"></i>
          </div>
          <div class="chart-container" style="height: 180px; width: 100%;">
            <canvas id="salesChart"></canvas>
          </div>
        </div>

        <!-- Users Chart -->
        <div class="bg-white rounded-xl shadow-md p-5">
          <div class="flex justify-between items-center mb-3">
            <h3 class="font-semibold text-lg text-gray-700">User Growth</h3>
            <i class="fas fa-user-plus text-green-600 text-xl"></i>
          </div>
          <div class="chart-container" style="height: 180px; width: 100%;">
            <canvas id="userChart"></canvas>
          </div>
        </div>
      </div>

      <!-- Table Section -->
    <div class="bg-white rounded-xl shadow-md p-5">
        <div class="flex justify-between items-center mb-3">
          <h3 class="font-semibold text-lg text-gray-700">Recent Orders</h3>
<button style="background-color: #1A5D8C;" class="text-white text-sm px-3 py-1.5 rounded-md hover:brightness-90">
  View All
</button>
        </div>
        <div class="overflow-x-auto">
          <table class="table-auto w-full text-sm text-left">
            <thead class="bg-gray-100">
              <tr>
                <th class="px-4 py-2 font-medium text-gray-600">Order ID</th>
                <th class="px-4 py-2 font-medium text-gray-600">Customer</th>
                <th class="px-4 py-2 font-medium text-gray-600">Amount</th>
                <th class="px-4 py-2 font-medium text-gray-600">Status</th>
              </tr>
            </thead>
            <tbody>
              <tr class="border-t">
                <td class="px-4 py-2">#1023</td>
                <td class="px-4 py-2">John Doe</td>
                <td class="px-4 py-2">$320</td>
                <td class="px-4 py-2 text-green-600 font-semibold">Completed</td>
              </tr>
              <tr class="border-t">
                <td class="px-4 py-2">#1024</td>
                <td class="px-4 py-2">Jane Smith</td>
                <td class="px-4 py-2">$150</td>
                <td class="px-4 py-2 text-yellow-600 font-semibold">Pending</td>
              </tr>
              <tr class="border-t">
                <td class="px-4 py-2">#1025</td>
                <td class="px-4 py-2">Mike Lee</td>
                <td class="px-4 py-2">$220</td>
                <td class="px-4 py-2 text-red-600 font-semibold">Cancelled</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>


    </div>
  </main>

  <!-- Include footer -->
  <%- include('../partials/admin/footer') %>

  <!-- Chart Scripts -->
  <script>
    
    const salesCtx = document.getElementById('salesChart').getContext('2d');
    new Chart(salesCtx, {
      type: 'line',
      data: {
        labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
        datasets: [{
          label: 'Sales ($)',
          data: [1200, 1900, 3000, 2500, 3200, 4100],
          borderColor: '#1A5D8C',
          tension: 0.4,
          fill: false
        }]
      },
      options: {
        responsive: true,
        plugins: { legend: { display: false } },
        scales: { y: { beginAtZero: true } }
      }
    });

    const userCtx = document.getElementById('userChart').getContext('2d');
    new Chart(userCtx, {
      type: 'bar',
      data: {
        labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
        datasets: [{
          label: 'New Users',
          data: [200, 350, 400, 380, 450, 520],
          backgroundColor: '#16A34A'
        }]
      },
      options: {
        responsive: true,
        plugins: { legend: { display: false } },
        scales: { y: { beginAtZero: true } }
      }
    });
  </script>
</body>
</html>
