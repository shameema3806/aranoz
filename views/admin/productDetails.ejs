<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Details | Admin</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background: #f8f9fa;
            font-family: Arial, sans-serif;
        }
        .product-card {
            background: #fff;
            border-radius: 10px;
            margin-left: 300px;
            padding: 25px;
            box-shadow: 0px 3px 10px rgba(0,0,0,0.1);
        }
        .gallery img {
            width: 100%; 
            height: 300px;
            object-fit: cover;
            border-radius: 10px;
            margin-bottom: 10px;
            transition: .4s;
            cursor: pointer;
        }
        .gallery img:hover{
            transform: scale(1.03);
        }
        .thumb-row img {
            width: 80px;
            height: 80px;
            object-fit: cover;
            margin-right: 8px;
            border-radius:5px;
            cursor: pointer;
            border:2px solid transparent;
        }
        .thumb-row img.active-thumb {
            border-color: #0d6efd;
        }
        .label-box {
            font-weight: 600;
            width: 130px;
            display: inline-block;
        }
        .action-btns a{
            margin-right: 10px;
        }
    </style>
</head>

<body>
<%- include("../../views/partials/admin/header") %>

    <div class="container py-4">
        <a href="/admin/products" class="btn btn-secondary mb-3">‚¨Ö Back to Products</a>

        <div class="product-card">

            <!-- PRODUCT TITLE -->
            <h2 class="fw-bold mb-3"><%= product.name %></h2>

            <div class="row">
                <!-- IMAGE GALLERY -->
                <div class="col-md-5">
                    <div class="gallery">
<img id="mainImage"
     src="<%= product.productImage && product.productImage.length > 0 
        ? '/public/product-images/' + product.productImage[0] 
        : '/img/product/placeholder.jpg' %>"
     alt="<%= product.name %>"
     class="product-img"
     style="transition: transform 0.3s ease; max-width: 150px; max-height: 150px; object-fit: contain;">

                    </div>

                    <!-- Thumbnails -->
               <div class="thumb-row d-flex mt-2">
    <% if(product.productImage && product.productImage.length > 0){ %>
        <% product.productImage.forEach((img,index)=>{ %>
            <img onclick="changeImage('/public/product-images/<%= img %>', this)"
                 src="/public/product-images/<%= img %>"
                 class="<%= index === 0 ? 'active-thumb' : '' %>">
        <% }) %>
    <% } else { %>
        <p>No images available</p>
    <% } %>
</div>



                </div>

                <!-- DETAILS SECTION -->
                <div class="col-md-7 ps-4">

                    <p><span class="label-box">Category:</span><%= product.category ? product.category.name : "No Category" %></p>
                    <p><span class="label-box">Price:</span> ‚Çπ<%= product.salePrice %></p>
                    <p><span class="label-box">Stock:</span> 
                        <% if(product.quantity > 10){ %>
                            <span class="text-success fw-bold"><%= product.quantity %></span>
                        <% } else if(product.quantity > 0){ %>
                            <span class="text-warning fw-bold"><%= product.quantity %> (Low Stock)</span>
                        <% } else { %>
                            <span class="text-danger fw-bold">Out of Stock</span>
                        <% } %>
                    </p>

                    <!-- DESCRIPTION -->
                    <h5 class="mt-3">Description</h5>
                    <p style="line-height:1.6; font-size:15px;"><%= product.description %></p>

                    <hr>
                    <div class="action-btns mt-3">
                                             <a href="/admin/editProduct?id=<%= product._id %>" class="btn-action btn-edit" title="Edit">

                                <i class="fas fa-edit"></i>
                            </a>
                    </div>

                    <!-- ACTION BUTTONS -->
                    <!-- <div class="action-btns mt-3">
                        <a href="/admin/products/edit/<%= product._id %>" class="btn btn-primary">‚úè Edit Product</a>
                        <a href="/admin/products/delete/<%= product._id %>" 
                           onclick="return confirm('Are you sure you want to delete this product?')" 
                           class="btn btn-danger">üóë Delete</a>
                    </div> -->

                </div>
            </div>
        </div>
    </div>


<script>
    // onchange gallery image
    function changeImage(img, el) {
        document.getElementById('mainImage').src = img;
        
        document.querySelectorAll('.thumb-row img')
            .forEach(x => x.classList.remove('active-thumb'));

        el.classList.add('active-thumb');
    }
</script>

</body>
</html>