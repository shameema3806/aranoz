      <h1 class="page-title">
        <i class="fas fa-receipt">
        </i> Order Details </h1>

      <div class="row">
        <!-- Left Column: Details, Timeline, Items, Address -->
        <div class="col-lg-8">
          <!-- Order Details -->
          <div class="detail-card">
            <h2 class="section-header"><i class="fas fa-receipt"></i> Order Details</h2>
            <div class="info-grid">
              <div class="info-item">
                <strong><i class="fas fa-hashtag me-2 text-muted"></i>Order ID</strong>
                <p>#<%= order.orderId %></p>
              </div>
              <div class="info-item">
                <strong><i class="fas fa-calendar me-2 text-muted"></i>Date</strong>
                <p><%= new Date(order.createdOn).toLocaleDateString('en-IN') %></p>
              </div>
              <div class="info-item">
                <strong><i class="fas fa-info-circle me-2 text-muted"></i>Status</strong>
                <p><span class="status-badge <%= order.status === 'Delivered' ? 'bg-success' : order.status === 'Cancelled' ? 'bg-danger' : order.status === 'Pending' ? 'bg-warning' : 'bg-secondary' %>"><%= order.status %></span></p>
              </div>
              <div class="info-item">
                <strong><i class="fas fa-rupee-sign me-2 text-muted"></i>Total Amount</strong>
                <p style="font-size: 1.2rem; font-weight: 700; color: #ff3368;">₹<%= order.finalAmount.toFixed(2) %></p>
              </div>
            </div>
          </div>


       <!-- Order Timeline -->
<div class="detail-card">
  <h2 class="section-header"><i class="fas fa-chart-line"></i> Order Timeline</h2>
  <div class="timeline">
    <% 
      // Status mapping for dynamic rendering
      const statusMap = {
        'Pending': { icon: 'fa-clock', color: 'bg-secondary', label: 'Order Confirmed', desc: 'Your order has been placed successfully' },
        'Processing': { icon: 'fa-spinner', color: 'bg-warning', label: 'Order Processing', desc: 'Your order is being prepared' },
        'Shipped': { icon: 'fa-truck', color: 'bg-info', label: 'Order Shipped', desc: 'Your order is on the way' },
        'Out for Delivery': { icon: 'fa-shipping-fast', color: 'bg-primary', label: 'Out for Delivery', desc: 'Your order is out for delivery' },
        'Delivered': { icon: 'fa-check-circle', color: 'bg-success', label: 'Order Delivered', desc: 'Your order has been successfully delivered' },
        'Cancelled': { icon: 'fa-times', color: 'bg-danger', label: 'Order Cancelled', desc: 'Order has been cancelled' },
        'Return Request': { icon: 'fa-undo', color: 'bg-warning', label: 'Return Requested', desc: 'Return request submitted' },
        'Returned': { icon: 'fa-undo-alt', color: 'bg-secondary', label: 'Order Returned', desc: 'Order has been returned and processed' }
      };

      // Defensive: Ensure statusHistory exists (for legacy orders)
      let history = order.statusHistory;
      if (!history || !Array.isArray(history) || history.length === 0) {
        history = [{ status: order.status, timestamp: order.createdOn || new Date(), reason: null }];
      }

      // Get current status index for progress (safe now)
      const currentIndex = history.findIndex(h => h.status === order.status);
    %>

    <% history.forEach((event, index) => { 
      const map = statusMap[event.status] || { icon: 'fa-question', color: 'bg-secondary', label: event.status, desc: 'Status updated' };
      const isCurrent = index === currentIndex;
      const isCompleted = index < currentIndex;
      const showReason = ['Cancelled', 'Return Request'].includes(event.status) && event.reason;
    %>
      <div class="timeline-item">
        <div class="timeline-icon <%= map.color %> <%= isCompleted ? 'completed' : isCurrent ? 'current' : '' %>">
          <i class="fas <%= isCompleted ? 'fa-check' : map.icon %>"></i>
        </div>
        <div class="timeline-content <%= isCurrent ? 'current-step' : '' %>">
          <h5><%= map.label %></h5>
          <p><%= map.desc %></p>
          <p class="small text-muted mb-0">
            <i class="fas fa-calendar me-1"></i>
            <%= new Date(event.timestamp).toLocaleDateString('en-IN') %> 
            <%= new Date(event.timestamp).toLocaleTimeString('en-IN', { hour: '2-digit', minute: '2-digit' }) %>
          </p>
          <% if (showReason) { %>
            <p><strong>Reason:</strong> <%= event.reason %></p>
          <% } %>
        </div>
      </div>
    <% }) %>

    <!-- Optional: Show future steps as projected (only if not cancelled/returned) -->
    <% 
      if (!['Cancelled', 'Return Request', 'Returned'].includes(order.status)) {
        const futureStatuses = ['Processing', 'Shipped', 'Out for Delivery', 'Delivered'].filter(s => 
          !history.some(h => h.status === s)
        );
        futureStatuses.forEach(status => { 
          const map = statusMap[status];
    %>
          <div class="timeline-item">
            <div class="timeline-icon bg-light text-muted">
              <i class="fas fa-arrow-right"></i>
            </div>
            <div class="timeline-content text-muted">
              <h5 class="text-muted"><%= map.label %></h5>
              <p class="text-muted"><%= map.desc %> (Upcoming)</p>
            </div>
          </div>
    <% 
        });
      }
    %>
  </div>
</div>


          <!-- Order Items -->
