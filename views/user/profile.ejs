<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>User profile</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>

  <style>
    /* Header styles
    .custom-user-header {
      background-color: #1A5D8C;
      color: white;
      width: 100%;
      padding: 15px 0;
      position: relative;
      top: 0;
      left: 0;
      z-index: 1000;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    } */

    
    .dashboard-wrapper {
      margin-top: 120px;
      display: flex;
      gap: 80px;
      justify-content: center;
      align-items: flex-start;
    }
    

    .dashboard-container {
      background-color: #d0f0ff; /* light blue */
      padding: 20px 25px;
      border-radius: 12px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
      min-width: 220px;
    }

    .dashboard-container ul {
      padding: 0;
      list-style: none;
    }

    .dashboard-container ul li {
      padding: 10px 0;
      border-bottom: 1px solid #c0e4f7;
    }

    .dashboard-container ul li a {
      text-decoration: none;
      font-weight: 600;
      color: #175b73;
    }

    .dashboard-container ul li a:hover {
      text-decoration: underline;
    }
    
    .container-section {
      display: flex;
      gap: 30px;
      margin-top: 120px; /* Push down from header */
      justify-content: center;
    }
    /* User profile card */
    .user-profile-container {
      background-color: #ffffff; /* white */
      padding: 50px 30px;
      border-radius: 12px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
      min-width: 400px;
    }

    .user-profile-container h5 {
      margin-bottom: 30px;
    }

    .user-profile-container p {
      margin: 8px 0;
    }
  </style>
</head>
<body>

  <!-- Include your header partial -->
  <%- include("../../views/partials/user/header") %>

  <!-- Custom header -->
  <header class="custom-user-header text-center">
    <!-- <h1 class="fs-3 fw-bold mb-0">User Dashboard</h1> -->
  </header>

  <!-- Dashboard and Profile Section -->
  <div class="container dashboard-wrapper">

      <!-- User profile content -->
    <div class="user-profile-container">
      <h5 class="fw-bold">User Profile</h5>
      <p><strong>Name:</strong> <%= user?.name || '' %></p>
      <p><strong>Phone:</strong> <%= user?.phone || '' %></p>
      <p><strong>Email:</strong> <%= user?.email || '' %></p>
      <div class="mt-3">
        <button class="btn btn-primary me-2">Change Email</button>
        <button class="btn btn-primary">Change Password</button>
      </div>
    </div>

    <!-- Sidebar menu -->
    <div class="dashboard-container">
      <ul>
        <li><a href="#">Dashboard</a></li>
        <li><a href="#">My Address</a></li>
        <li><a href="#">Orders</a></li>
        <li><a href="#">Wallet Status</a></li>
        <li><a href="#">Wallet History</a></li>
        <li><a href="#">Referrals</a></li>
        <li><a href="/user/logout">Logout</a></li>
      </ul>
    </div>

  
  </div>

</body>
</html>
