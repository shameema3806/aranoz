<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("../partials/user/header") %>
  <title>Shop</title>
</head>
<body>

  <div class="container mt-5">
    <div class="row">
      <!-- Sidebar: Categories -->
      <div class="col-md-3">
        <h5>Categories</h5>
        <ul class="list-group">
          <li class="list-group-item <%= !selectedCategory ? 'active' : '' %>">
            <a href="/shop" class="text-decoration-none">All</a>
          </li>
          <% categories.forEach(cat => { %>
            <li class="list-group-item <%= selectedCategory == cat._id ? 'active' : '' %>">
              <a href="/shop?category=<%= cat._id %>" class="text-decoration-none">
                <%= cat.name %>
              </a>
            </li>
          <% }) %>
        </ul>
      </div>

      <!-- Product Grid -->
      <div class="col-md-9">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h3>Products</h3>
          <form method="GET" action="/shop" class="d-flex">
            <input type="text" name="search" class="form-control me-2" placeholder="Search..." value="<%= searchQuery %>">
            <button type="submit" class="btn btn-outline-primary">Search</button>
          </form>
        </div>
        <div class="row">
          <% if (products.length === 0) { %>
            <p>No products found.</p>
          <% } else { %>
            <% products.forEach(product => { %>
              <div class="col-md-4 mb-4">
                <div class="card h-100">
                  <img src="<%= product.image && product.image.length > 0 ? '/product-images/' + product.image[0] : '/img/product/placeholder.jpg' %>" class="card-img-top" alt="<%= product.name %>">
                  <div class="card-body">
                    <h5 class="card-title"><%= product.name %></h5>
                    <p class="card-text">â‚¹ <%= product.price %></p>
                    <a href="/product/<%= product._id %>" class="btn btn-sm btn-primary">View Details</a>
                  </div>
                </div>
              </div>
            <% }) %>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <%- include("../partials/user/footer") %>
</body>
</html>
