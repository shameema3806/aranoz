<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("../partials/user/header") %>
  <title>Shop</title>
  <style>
    body {
      background-color: #f9fdff; /* Light Sky Blue */
    }

    .product-card {
      transition: transform 0.3s, box-shadow 0.3s;
      cursor: pointer;
    }
    .product-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 20px rgba(0,0,0,0.2);
    }

    .product-img {
      max-width: 150px;
      max-height: 150px;
      object-fit: contain;
    }

    .list-group-item {
      background-color: #f3f8f8a6;
      border: none;
      margin-bottom: 5px;
      border-radius: 4px;
      transition: background-color 0.3s;
    }

    .list-group-item a {
      color: #000;
      text-decoration: none;
    }

    /* Responsive: make sidebar (category + filter) appear on top for small screens */
    @media (max-width: 768px) {
      .sidebar {
        margin-bottom: 20px;
      }
    }
  </style>
</head>
<body>

  <div class="container mt-5">
    <div class="row">

      <!-- Sidebar: Categories + Filters -->
      <div class="col-md-3 sidebar">
        <h5 class="mt-5">Categories</h5>
        <ul class="list-group">
          <li class="list-group-item <%= !selectedCategory ? 'active' : '' %>">
            <a href="/shop" class="text-decoration-none">All</a>
          </li>
          <% categories.forEach(cat => { %>
            <li class="list-group-item <%= selectedCategory == cat._id ? 'active' : '' %>">
              <a href="/shop?category=<%= cat._id %>" class="text-decoration-none">
                <%= cat.name %>
              </a>
            </li>
          <% }) %>
        </ul>

        <!-- Filter Section (Now inside the sidebar) -->
        <h5 class="mt-4">Filter by Price</h5>
        <ul class="list-group">
          <li class="list-group-item <%= selectedPriceRange === 'under5000' ? 'active' : '' %>">
            <a href="/shop?priceRange=under5000" class="text-decoration-none text-dark">Under ₹5,000</a>
          </li>
          <li class="list-group-item <%= selectedPriceRange === '5000to10000' ? 'active' : '' %>">
            <a href="/shop?priceRange=5000to10000" class="text-decoration-none text-dark">₹5,000 – ₹10,000</a>
          </li>
          <li class="list-group-item <%= selectedPriceRange === 'above10000' ? 'active' : '' %>">
            <a href="/shop?priceRange=above10000" class="text-decoration-none text-dark">Above ₹10,000</a>
          </li>
        </ul>
      </div>

      

      <!-- Product Grid -->
      <div class="col-md-9">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h3 class="mt-5">Products</h3>
          <form method="GET" action="/shop" class="d-flex">
            <input type="text" name="search" class="form-control me-2" placeholder="Search..." value="<%= searchQuery %>">
            <button type="submit" class="btn btn-outline-primary me-2">Search</button>
            <% if (searchQuery && searchQuery.trim() !== '') { %>
              <a href="/shop" class="btn btn-outline-danger">Cancel</a>
            <% } %>
          </form>
        </div>



        
        <div class="row">
          <% if (products.length === 0) { %>
            <p>No products found.</p>
          <% } else { %>
            <% products.forEach(product => { %>
              <div class="col-sm-6 col-md-4 mb-4">
                <div class="card product-card h-100">
                  <div class="d-flex justify-content-center align-items-center p-3">
                    <a href="/productDetail?id=<%= product._id %>">
                      <img 
                        src="<%= product.productImage && product.productImage.length > 0 ? '/public/product-images/' + product.productImage[0] : '/img/product/placeholder.jpg' %>" 
                        class="card-img-top product-img" 
                        alt="<%= product.productName %>"
                      >
                    </a>
                  </div>
                  <div class="card-body text-center">
                    <h5 class="card-title"><%= product.productName %></h5>
                    <p class="card-text">
                      <s>₹<%= product.regularPrice %></s> ₹<%= product.salePrice %>
                    </p>
                    <a href="/product/<%= product._id %>" class="btn btn-sm btn-primary">Add to cart</a>
                  </div>
                </div>
              </div>
            <% }) %>
          <% } %>
        </div>


        
      </div>

    </div>
  </div>

  <%- include("../partials/user/footer") %>
</body>
</html>
