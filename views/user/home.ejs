<!-- Product List Start -->
<section class="product_list section_padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="section_tittle text-center">
                    <h2>Our Products</h2>
                </div>
            </div>
        </div>
                <div class="row align-items-center justify-content-between">
            <div class="col-lg-12">
                <div class="best_product_slider owl-carousel">
                    <% if (products && products.length > 0) { %>
                        <% for(let i = 0; i < products.length; i++) { %>
                            <div class="single_feature_post_text">
                                <p>Premium Quality</p>
                                <h3><%= products[i].productName %></h3>
                                <h4>
                                    <% if (products[i].offerPrice) { %>
                                        <span class="original-price"><s>₹<%= products[i].regularPrice.toFixed(2) %></s></span>
                                        ₹<%= products[i].offerPrice.toFixed(2) %>
                                    <% } else { %>
                                        ₹<%= products[i].salePrice.toFixed(2) %>
                                    <% } %>
                                </h4>
                                <div class="product-actions">
                                <a href="/productDetail?id=<%= products._id %>" class="feature_btn">
                                     Explore Now <i class="fas fa-play"></i>
                                </a>
                                    <a aria-label="Add to Wishlist" class="action-btn hover-up" href="/wishlist?id=<%= products[i]._id %>">
                                        <i class="ti-heart"></i>
                                    </a>
                                    <a href="/cart?id=<%= products[i]._id %>" class="action-btn hover-up">
                                        <i class="ti-shopping-cart"></i>
                                    </a>
                                </div>
                                <a href="/productDetails?id=<%= products[i]._id %>">
                               <img src="<%= products[i].productImage && products[i].productImage.length > 0 ? '/public/product-images/' + products[i].productImage[0] : '/img/product/placeholder.jpg' %>" alt="<%= products[i].productName %>">                                </a>
                            </div>
                        <% } %>
                    <% } else { %>
                        <p class="text-center">No products available.</p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Product List End -->

