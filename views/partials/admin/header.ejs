<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Dashboard</title>

  
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
  <!-- <link href="/assets/css/style.css" rel="stylesheet" /> -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">  <link href="/assets/css/style.css" rel="stylesheet" />

</head>

<body class="bg-gray-100 text-gray-800">

<!-- ====================== NAVBAR ====================== -->
<nav class="navbar navbar-compact fixed top-0 left-0 right-0 shadow-md z-40 bg-white">
  <div class="flex items-center justify-between px-4 h-12">

    <!-- Left section: Dashboard title -->
    <h1 class="text-black text-lg font-semibold">Dashboard</h1>

    <!-- Right section: Search bar + Hamburger -->
    <div class="flex items-center gap-3 ml-auto">

      <!-- Search bar -->
      <div class="navbar-search hidden sm:flex">
        <input type="text" placeholder="Search..." class="px-3 py-1 border border-gray-300 rounded-l-md outline-none"/>
        <button class="text-black px-3 py-1 rounded-r-md"><i class="fas fa-search"></i></button>
      </div>

      <!-- Hamburger Button -->
      <button id="sidebarToggle" class="xl:hidden text-black text-xl focus:outline-none ml-2">
        <i class="fas fa-bars"></i>
      </button>

    </div>
  </div>
</nav>




  <!-- ====================== SIDEBAR ====================== -->
  <aside id="sidebar" class="fixed top-12 bottom-0 left-0 bg-white shadow-lg w-64 p-4 overflow-y-auto z-30 transform transition-transform duration-300 ease-in-out">
    <div class="mb-4 ">
      <a href="#" class="flex items-center gap-2 text-gray-800 text-lg font-semibold">
        <img src="/assets/img/logo-ct-dark.png" class="h-8" alt="main_logo" />
        <span>Aranoz Dashboard</span>
      </a>
    </div>
    <hr class="border-gray-300 mb-4" />

    <!-- Nav Items -->
    <ul class="space-y-2 text-gray-700 ">
      <li><a href="/admin" class="flex items-center gap-2 py-2 px-3 rounded-md hover:bg-gray-100 font-medium"><i class="fas fa-tv"></i> Dashboard</a></li>
      <li><a href="/admin/users" class="flex items-center gap-2 py-2 px-3 rounded-md hover:bg-gray-100"><i class="fas fa-user"></i> Users</a></li>
      <li><a href="/admin/category" class="flex items-center gap-2 py-2 px-3 rounded-md hover:bg-gray-100"><i class="fas fa-credit-card"></i> Category</a></li>
      <li><a href="/admin/products" class="flex items-center gap-2 py-2 px-3 rounded-md hover:bg-gray-100"><i class="fas fa-cube"></i> Products</a></li>
      <!-- <li><a href="/admin/addProducts" class="flex items-center gap-2 py-2 px-3 rounded-md hover:bg-gray-100"><i class="fas fa-plus-circle"></i> Add Product</a></li> -->
      <li><a href="/admin/coupon" class="flex items-center gap-2 py-2 px-3 rounded-md hover:bg-gray-100"><i class="fas fa-ticket-alt"></i> Coupon</a></li>
      <li><a href="/admin/banner" class="flex items-center gap-2 py-2 px-3 rounded-md hover:bg-gray-100"><i class="fas fa-image"></i> Banner</a></li>
      <li><a href="/admin/order" class="flex items-center gap-2 py-2 px-3 rounded-md hover:bg-gray-100"><i class="fas fa-file-alt"></i> Order</a></li>
      <li><a href="/admin/inventory" class="flex items-center gap-2 py-2 px-3 rounded-md hover:bg-gray-100"><i class="fas fa-boxes"></i> Inventory</a></li>
    </ul>

    <!-- Profile Section -->
    <div class="mt-8 border-t border-gray-200 pt-4">
      <a href="/admin/profile" class="flex items-center gap-2 py-2 px-3 hover:bg-gray-100"><i class="fas fa-user-circle"></i> Profile</a>
      <a href="/admin/settings" class="flex items-center gap-2 py-2 px-3 hover:bg-gray-100"><i class="fas fa-cog"></i> Settings</a>
      <a href="/admin/logout" class="flex items-center gap-2 py-2 px-3 hover:bg-gray-100 text-red-600"><i class="fas fa-power-off"></i> Logout</a>
    </div>
  </aside>

  <script>
  

    
  const sidebar = document.getElementById('sidebar');
  const sidebarToggle = document.getElementById('sidebarToggle');

  // Toggle sidebar on hamburger click
  sidebarToggle.addEventListener('click', () => {
    sidebar.classList.toggle('-translate-x-full');
  });

  // Reset sidebar when resizing to large screens
  window.addEventListener('resize', () => {
    if (window.innerWidth >= 1200) { // xl breakpoint
      sidebar.classList.remove('-translate-x-full');
    }
  });


  </script>
